{% extends "clubBase.njk" %}

{% block metaStuff %}
        <title>{{title}}</title>
{% endblock %}
    
{% block main %}
			<header>
				<h1  style="font-family:georgia">Sign Up</h1>
			</header>
			<form action="./membershipSignup" method="post" class="signUpForm">
				<fieldset>
				<label>Name: </label>
				<input type="name" id="name" name="name" required maxlength="20" minlength="3">
				<label>Email: </label>
				<input type="email" id="email" name="email" required maxlength="20" minlength="6">
				<label>Password: </label>
				<input type="password" id="password" name="password" required minlength="6" maxlength="20">
				<label>Mushroom Hunting Experince:</label>
				<select name="exp" id="exp">
					<option value="None">None</option>
					<option value="Little">Little</option>
					<option value="Good Amount">Good Amount</option>
					<option value="Expert">Expert</option>
				</select>
				<label>Comments: </label>
				<textarea type="comments" id="comments" name="comments" rows="4" cols="50"></textarea>
				<button type="submit">Sign up </button>
				</fieldset>
			</form>
			<section id="ThanksDialog"></section>
{% endblock %}

{% block script %}

{% endblock %}