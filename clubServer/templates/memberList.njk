{% extends "clubBase.njk" %}

{% block metaStuff %}
        <title>{{title}}</title>
{% endblock %}
    
{% block main %}
			<header>
				<h1>Club Members</h1>
			</header>
			<h2>Member List</h2>
			<table id = "memberTable">
				<thead>
					<tr>
						<th scope="col">First Name</th>
						<th scope="col">Last Name</th>
						<th scope="col">Email</th>
						<th scope="col">Role</th>
					</tr>
				</thead>
				<tbody id = "memberBody">
					{%for member in members %}
					<tr>
						<td>{{member.firstName}}</td>
						<td>{{member.lastName}}</td>
						<td>{{member.email}}</td>
						<td>{{member.role}}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
{% endblock %}

{% block script %}

{% endblock %}